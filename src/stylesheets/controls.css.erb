
#classic_controls {
  font-size: 0.72em;
  overflow: auto;
  width:300px;
  padding:20px;
}
#classic_controls #demand, #classic_controls #supply, #classic_controls #other {
  padding: 0;
  border: 0;
  margin: 0;
  margin-left: 2.5%;
  width: 100%;
  float: left;
}
#classic_controls table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0px 0px;
}

#classic_controls table tr:hover td.name {
  font-weight: bold;
  background-image: url("/assets/images/oneblackpixel.png");
}

#classic_controls table tr:hover a.choiceLink {
  color:#000;
}

#classic_controls table tr:hover td.choice2 {
  display:block;
}

/*
#classic_controls table tr td a.leverNameLink {

}
*/


#classic_controls table td.choice2 {
  width: 20px;
  padding-left:4px;
  display:none;
}

#classic_controls table td.choice {
  width: 20px;
  height: 15px;
}

#classic_controls table td.choice a {
  display: block;
  width: 100%;
  text-align: center;
  vertical-align: bottom;
  position: relative;
  color: #FFF;
  text-decoration: none;
  height: 16px;
}

/*
#classic_controls table td.choice a.selected {
  color: #000;
}
*/

#classic_controls table td.name {
  background-image: url("/assets/images/onegreypixel.png");
  background-position: left center;
  background-repeat: repeat-x;
  width:160px;
}

#classic_controls table td.nameL2 {
  background-image: url("/assets/images/onegreypixel.png");
  background-position: left center;
  background-repeat: repeat-x;
  width:150px !important;
}

#classic_controls table td.name a {
  background-color: #fff;
  text-decoration: none;
  color: #000;
  cursor: help;
}

#classic_controls table tr.menuWidth {
		  width:260px;
		  height:0px;
}

#classic_controls table tr.menuWidthL2 {
		  width:250px;
		  height:0px;
}

#classic_controls table tr td.menuLevelWidth {
		  width:20px;
}

#classic_controls table td.name a:hover {
  text-decoration: underline;
}
#classic_controls table td.help a, #classic_controls div.help {
  text-align: center;
  display: block;
  background-color: #7c88fa;
  border: solid #7c88fa 1px;
  color: white;
  width: 100%;
  text-decoration: none;
}
#classic_controls table td.help, #classic_controls div.help {
  width: 14px;
}

#classic_controls a.accordion-toggle  {
color:#000; text-decoration: none;
}

#classic_controls table tr.incremental a {
  background-position: left center;
  background-repeat: repeat-y;
}
<% 1.upto(4) do |c| %>
  <% 1.upto(9) do |i| %>
    #classic_controls table tr.incremental a.level<%= c %>_<%= i %> { background-image: url('/assets/images/fractions/level<%= c %>_<%= i %>.png'); }
  <% end %>
<% end %>

#classic_controls div.level1, 
#classic_controls div.level2, 
#classic_controls div.level3,
#classic_controls div.level4, 
#classic_controls div.alternate  {
  width: 14px;
  text-align: center;
  color: #000;
  border: solid #ccc 1px;
  display: inline-block;
}

#classic_controls table#notes {
  border-spacing: 0px 5px;
}

#notes td#firstcell {
  width: 60px;
}

#classic_controls table tr.incremental a.level1, #classic_controls div.level1 {
  background-color: #92C979;
}
#classic_controls table tr.incremental a.level2, #classic_controls div.level2 {
  background-color: #EFDD60;
}
#classic_controls table tr.incremental a.level3, #classic_controls div.level3 {
  background-color: #FFAE55;
}
#classic_controls table tr.incremental a.level4, #classic_controls div.level4 {
  background-color: #F44545;
}
#classic_controls table tr.alternative a.selected {
  background-color: #aaa;
}
