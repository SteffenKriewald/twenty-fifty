/* Style The Dropdown Button */
.dropbtn-dates {
    padding-left: 1px;
    padding-right: 1px;
    padding-bottom: 0px;
    padding-top: 0px;
    border: none;
    cursor: pointer;
    background-color:transparent;
}

/* The container <div> - needed to position the dropdown content */
.dropdown-dates {
    position: relative;
    display: inline-block;
    text-align: center;
}

/* Dropdown Content (Hidden by Default) */
.dropdown-content-dates {
  margin-left: -10px;
    display: none;
    position: absolute;
    min-width: 40px;
    z-index: 100;
    overflow-y: visible;
    height: 40px;
}

/* Links inside the dropdown */
.dropdown-content-dates a {
    color: black;
    padding: 1px 1px;
    text-decoration: none;
    text-align: center;
    display: block;
    background-color: #ccd6e0;
}

/* Change color of dropdown links on hover */
.dropdown-content-dates a:hover {background-color: #7f99b2;}


/* Show the dropdown menu on hover */
.dropdown-dates:hover .dropdown-content-dates {
    display: block;
}


/* Change the background color of the dropdown button when the dropdown content is shown */
.dropdown-dates:hover .dropbtn-dates {
    background-color: white;
	}


